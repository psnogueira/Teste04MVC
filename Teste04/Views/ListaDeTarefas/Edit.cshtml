@{
}
@model Tarefa

<h2>Editar Tarefa</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TarefaID" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group mt-4 mb-4">
        <label asp-for="Desc" class="control-label"></label>
        <textarea asp-for="Desc" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Desc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary mt-3 mb-3" />
    </div>
</form>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>